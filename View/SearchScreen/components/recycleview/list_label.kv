<ListLabel>
    md_bg_color: '#ffffff'
    radius: 12
    spacing: dp(10)

    FitImage:
        source: root.image_path
        size_hint: .45, 1
        radius: (12, 0, 0, 12)
    
    MDRelativeLayout:

        MDLabel:
            pos_hint: {'top': 1}
            text: root.title
            font_style: 'Caption'
            bold: True
            color: '#0072B5'
            adaptive_height: True
            shorten: True

        MDLabel:
            pos_hint: {'top': .85}
            text: root.text
            font_style: 'Caption'
            color: '#0072B5'
            adaptive_height: True
            shorten: True
        
        MDLabel:
            pos_hint: {'top': .16}
            text: root.date
            font_style: 'Caption'
            font_size: '8sp'
            color: '#0072B5'
            adaptive_height: True
            shorten: True