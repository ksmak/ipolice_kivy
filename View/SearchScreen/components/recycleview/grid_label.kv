<GridLabel>:
    orientation: 'vertical'
    md_bg_color: '#ffffff'
    padding: dp(5)
    spacing: '5dp'
    radius: 12

    FitImage:
        source: root.image_path
        size_hint: 1, .7
        radius: (12, 12, 0, 0)

    MDLabel:
        text: root.title
        color: '#0072B5'
        font_style: 'Caption'
        bold: True
        adaptive_height: True
        shorten: True
    
    MDLabel:
        text: root.text
        color: '#0072B5'
        font_style: 'Caption'
        adaptive_height: True
        shorten: True
    
    MDLabel:
        text: root.date
        color: '#0072B5'
        font_style: 'Caption'
        font_size: '8sp'
        adaptive_height: True
        shorten: True