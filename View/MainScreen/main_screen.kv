<MainScreenView>
    
    MDBoxLayout:
        orientation: 'vertical'
                        
        MDTopAppBar:
            title: "E-KRIM-V"
            anchor_title: "left"
            right_action_items: [["magnify", lambda x: root.to_search_screen()]]
        
        MDBottomNavigation:
            id: bottom_nav
            selected_color_background: app.theme_cls.primary_light
            text_color_active: app.theme_cls.primary_color
            
            MDBottomNavigationItem:
                name: 'main'
                text: 'Главная'
                icon: 'home'
                md_bg_color: app.theme_cls.primary_light

                MDScrollView:
                    do_scroll_x: False
                    do_scroll_y: True

                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: '20dp'
                        adaptive_height: True
                        spacing: '15dp'
                    
                        MDLabel:
                            text: 'Категории'
                            font_style: 'Button'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.accent_color

                        MDScrollView:
                            do_scroll_x: True
                            do_scroll_y: False
                            size_hint_y: None
                            height: '130dp'

                            MDBoxLayout:
                                id: category_list_container
                                adaptive_size: True
                                spacing: '5dp'
                        
                        MDRelativeLayout:
                                                       
                            MDLabel:
                                text: 'Последние добавления:'
                                pos_hint: {'left': 0, 'center_y': .5}
                                font_style: 'Button'
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.accent_color

                            MDIconButton:
                                pos_hint: {'right': .8, 'center_y': .5}
                                theme_icon_color: "Custom"
                                icon: 'square'
                                icon_size: '16sp'
                                icon_color: app.theme_cls.accent_color if root.model.browse_type == 'gallery' else app.theme_cls.primary_color
                                on_release: root.controller.set_browse_type('gallery')

                            MDIconButton:
                                pos_hint: {'right': .9, 'center_y': .5}
                                theme_icon_color: "Custom"
                                icon: 'view-agenda'
                                icon_size: '16sp'
                                icon_color: app.theme_cls.accent_color if root.model.browse_type == 'list' else app.theme_cls.primary_color
                                on_release: root.controller.set_browse_type('list')

                            MDIconButton:
                                pos_hint: {'right': 1, 'center_y': .5}
                                theme_icon_color: "Custom"
                                icon: 'view-grid'
                                icon_size: '16sp'
                                icon_color: app.theme_cls.accent_color if root.model.browse_type == 'grid' else app.theme_cls.primary_color
                                on_release: root.controller.set_browse_type('grid')

                            
                        MDRecycleView:
                            id: gallery_rv
                            data: root.model.last_items
                            viewclass: 'GalleryLabel'
                            size_hint_y: None
                            height: root.ids.gallery_rv_layout.height
                            do_scroll_x: False
                            do_scroll_y: False
                            opacity: 1 if root.model.browse_type == 'gallery' else 0

                            BoxRecycleLayout:
                                id: gallery_rv_layout
                                size_hint_y: None
                                height: self.minimum_height if root.ids.gallery_rv.opacity == 1 else 0
                                orientation: 'vertical'
                                default_size: None, '250dp'
                                default_size_hint: 1, None
                                spacing: '20dp'
                    
                        MDRecycleView:
                            id: list_rv
                            data: root.model.last_items
                            viewclass: 'ListLabel'
                            size_hint_y: None
                            height: root.ids.list_rv_layout.height
                            do_scroll_x: False
                            do_scroll_y: False
                            opacity: 1 if root.model.browse_type == 'list' else 0

                            BoxRecycleLayout:
                                id: list_rv_layout
                                size_hint_y: None
                                height: self.minimum_height if root.ids.list_rv.opacity == 1 else 0
                                orientation: 'vertical'
                                default_size: None, '120dp'
                                default_size_hint: 1, None
                                spacing: '20dp'
                        
                        MDRecycleView:
                            id: grid_rv
                            data: root.model.last_items
                            viewclass: 'GridLabel'
                            size_hint_y: None
                            height: root.ids.grid_rv_layout.height
                            do_scroll_x: False
                            do_scroll_y: False
                            opacity: 1 if root.model.browse_type == 'grid' else 0

                            GridRecycleLayout:
                                id: grid_rv_layout
                                size_hint_y: None
                                height: self.minimum_height if root.ids.grid_rv.opacity == 1 else 0
                                default_size: None, '120dp'
                                default_size_hint: 1, None
                                spacing: '20dp'
                                cols: 2
    
            MDBottomNavigationItem:
                name: 'favorite'
                text: 'Избранное'
                icon: 'star'
                md_bg_color: app.theme_cls.primary_light

                MDScrollView:
                    do_scroll_x: False
                    do_scroll_y: True

                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        padding: '20dp'
                        spacing: '15dp'

                    
                        MDRelativeLayout:
                            MDLabel:
                                text: 'Избранное:'
                                pos_hint: {'left': 0, 'center_y': .5}
                                font_style: 'Button'
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.accent_color
                                adaptive_size: True

                            MDIconButton:
                                pos_hint: {'right': .8, 'center_y': .5}
                                theme_icon_color: "Custom"
                                icon: 'square'
                                icon_size: '16sp'
                                icon_color: app.theme_cls.accent_color if root.model.browse_type == 'gallery' else app.theme_cls.primary_color
                                on_release: root.controller.set_browse_type('gallery')

                            MDIconButton:
                                pos_hint: {'right': .9, 'center_y': .5}
                                theme_icon_color: "Custom"
                                icon: 'view-agenda'
                                icon_size: '16sp'
                                icon_color: app.theme_cls.accent_color if root.model.browse_type == 'list' else app.theme_cls.primary_color
                                on_release: root.controller.set_browse_type('list')

                            MDIconButton:
                                pos_hint: {'right': 1, 'center_y': .5}
                                theme_icon_color: "Custom"
                                icon: 'view-grid'
                                icon_size: '16sp'
                                icon_color: app.theme_cls.accent_color if root.model.browse_type == 'grid' else app.theme_cls.primary_color
                                on_release: root.controller.set_browse_type('grid')

                        MDRecycleView:
                            id: gallery_rv_fav
                            data: root.model.fav_items
                            viewclass: 'GalleryLabel'
                            size_hint_y: None
                            height: root.ids.gallery_rv_layout_fav.height
                            do_scroll_x: False
                            do_scroll_y: False
                            opacity: 1 if root.model.browse_type == 'gallery' else 0

                            BoxRecycleLayout:
                                id: gallery_rv_layout_fav
                                size_hint_y: None
                                height: self.minimum_height if root.ids.gallery_rv_fav.opacity == 1 else 0
                                orientation: 'vertical'
                                default_size: None, '250dp'
                                default_size_hint: 1, None
                                spacing: '20dp'
                    
                        MDRecycleView:
                            id: list_rv_fav
                            data: root.model.fav_items
                            viewclass: 'ListLabel'
                            size_hint_y: None
                            height: root.ids.list_rv_layout_fav.height
                            do_scroll_x: False
                            do_scroll_y: False
                            opacity: 1 if root.model.browse_type == 'list' else 0

                            BoxRecycleLayout:
                                id: list_rv_layout_fav
                                size_hint_y: None
                                height: self.minimum_height if root.ids.list_rv_fav.opacity == 1 else 0
                                orientation: 'vertical'
                                default_size: None, '120dp'
                                default_size_hint: 1, None
                                spacing: '20dp'
                        
                        MDRecycleView:
                            id: grid_rv_fav
                            data: root.model.fav_items
                            viewclass: 'GridLabel'
                            size_hint_y: None
                            height: root.ids.grid_rv_layout_fav.height
                            do_scroll_x: False
                            do_scroll_y: False
                            opacity: 1 if root.model.browse_type == 'grid' else 0

                            GridRecycleLayout:
                                id: grid_rv_layout_fav
                                size_hint_y: None
                                height: self.minimum_height if root.ids.grid_rv_fav.opacity == 1 else 0
                                default_size: None, '120dp'
                                default_size_hint: 1, None
                                spacing: '5dp'
                                cols: 2
        
            MDBottomNavigationItem:
                name: 'contacts'
                text: 'Контакты'
                icon: 'apps'
                md_bg_color: app.theme_cls.primary_light

                

                MDLabel:
                    text: 'Контакты'
                    halign: 'center'
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.accent_color
    MDSpinner:
        size_hint: None, None
        size: '46dp', '46dp'
        pos_hint: {'center_x': .5, 'center_y': .5}
        active: root.model.is_loading