<CategoryCard>:
    md_bg_color: app.theme_cls.primary_light
    size_hint: None, None
    size: dp(110), dp(130)
    # padding: dp(5)
            
    MDRelativeLayout:
                    
        MDLabel:
            pos_hint: {'top': 0.32}
            text_size: self.size
            text: root.category_name
            valign: 'top'
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_color
            font_style: 'Caption'
            bold: True
        
        AsyncImage:
            id: card_button
            source: root.category_icon
            pos_hint: {'top': .97, 'center_x': .5}
            size_hint: .6, .6
            canvas.before:
                # Color:
                #     rgb: 1, 1, 1

                # Ellipse:
                #     pos: self.x - 14, self.y
                #     size: self.height + 5, self.height + 5
                
                Color:
                    rgb: app.theme_cls.primary_color
                    
                Line:
                    circle: self.center_x, self.center_y, self.width / 2 + 8
                    width: 1.5

        