<CategoryCard>:
    md_bg_color: app.theme_cls.primary_light
    size_hint: None, None
    size: dp(100), dp(130)
    padding: dp(5)
            
    MDRelativeLayout:
                    
        MDLabel:
            pos_hint: {'top': 0.3}
            text_size: self.size
            text: root.category_name
            valign: 'top'
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_color
            font_style: 'Caption'
        
        AsyncImage:
            id: card_button
            source: root.category_icon
            pos_hint: {'top': 1, 'center_x': .5}
            size_hint: .6, .6
            canvas.before:
                Color:
                    rgb: app.theme_cls.primary_color
                Ellipse:
                    pos: self.x - 18, self.y + 3
                    size: self.width + 30, self.height
        