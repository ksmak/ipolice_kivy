<FavoriteHeader>
    adaptive_height: True
    
    MDLabel:
        text: root.title
        pos_hint: {'center_x': .5, 'center_y': .5}
        font_style: 'Button'
        theme_text_color: "Custom"
        text_color: app.theme_cls.accent_color

    MDIconButton:
        id: gallery_button
        pos_hint: {'center_x': .5, 'center_y': .5}
        theme_icon_color: "Custom"
        icon: 'square'
        icon_size: '16sp'
        icon_color: app.theme_cls.accent_color if root.button == 'gallery' else app.theme_cls.primary_color

    MDIconButton:
        id: list_button
        pos_hint: {'center_x': .5, 'center_y': .5}
        theme_icon_color: "Custom"
        icon: 'view-agenda'
        icon_size: '16sp'
        icon_color: app.theme_cls.accent_color if root.button == 'list' else app.theme_cls.primary_color


    MDIconButton:
        id: grid_button
        pos_hint: {'center_x': .5, 'center_y': .5}
        theme_icon_color: "Custom"
        icon: 'view-grid'
        icon_size: '16sp'
        icon_color: app.theme_cls.accent_color if root.button == 'grid' else app.theme_cls.primary_color

