<GridLabel>:
    orientation: 'vertical'
    md_bg_color: app.theme_cls.primary_light

    MDRelativeLayout:
        AsyncImage:
            size_hint: 1, .7
            pos_hint: {'top': 1}
            source: root.photo
            color: app.theme_cls.primary_light
        
        MDIconButton:
            id: favorite_button
            pos_hint: {'top': 1.1, 'x': .8}
            theme_icon_color: 'Custom'
            icon_color: app.theme_cls.primary_color
            icon_size: '18dp'
            icon: 'star' if root.is_favorite else 'star-outline'
    
     
        MDLabel:
            pos_hint: {'top': .3, 'x': .02}
            size_hint_x: .95
            text: root.title
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            font_style: 'Caption'
            bold: True
            adaptive_height: True
            shorten: True
        
        MDLabel:
            pos_hint: {'top': .15, 'x': .02}
            size_hint_x: .95
            text: root.place_info
            theme_text_color: "Custom"
            text_color: app.theme_cls.accent_color
            font_style: 'Caption'
            font_size: '9sp'
            adaptive_height: True
            shorten: True