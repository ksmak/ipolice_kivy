<GridLabel>:
    orientation: 'vertical'
    md_bg_color: '#ffffff'
    # spacing: '10dp'
    radius: 12

    MDRelativeLayout:
        FitImage:
            size_hint: 1, .7
            pos_hint: {'top': 1}
            source: root.photo
            radius: (12, 12, 0, 0)
        
        MDIconButton:
            id: favorite_button
            pos_hint: {'top': 1.1, 'x': .8}
            theme_icon_color: 'Custom'
            icon_color: app.theme_cls.primary_color
            icon_size: '18dp'
            icon: 'star' if root.is_favorite else 'star-outline'
    
        MDLabel:
            text: root.title
            pos_hint: {'top': .29, 'x': .05}
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            font_style: 'Caption'
            bold: True
            adaptive_height: True
            shorten: True
        
        MDLabel:
            text: root.date
            pos_hint: {'top': .1, 'x': .05}
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            font_style: 'Caption'
            font_size: '8sp'
            adaptive_height: True
            shorten: True