<GridLabel>:
    orientation: 'vertical'
    md_bg_color: '#ccffff'

    MDRelativeLayout:
        AsyncImage:
            size_hint: 1, .7
            pos_hint: {'top': 1}
            source: root.photo
        
        MDIconButton:
            id: favorite_button
            pos_hint: {'top': 1.1, 'x': .8}
            theme_icon_color: 'Custom'
            icon_color: app.theme_cls.primary_color
            icon_size: '18dp'
            icon: 'star' if root.is_favorite else 'star-outline'
    
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'top': .3}
            adaptive_size: True
            padding: '4dp'

            MDLabel:
                text: root.title[:20]
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                font_style: 'Caption'
                bold: True
                adaptive_size: True
                shorten: True
            
            MDLabel:
                text: root.place_info[:25]
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                font_style: 'Caption'
                font_size: '9sp'
                adaptive_size: True
                shorten: True