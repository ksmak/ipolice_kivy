<GalleryLabel>:
    orientation: 'vertical'
    md_bg_color: '#ffffff'

    MDRelativeLayout:

        MDCarousel:
            id: carousel
            size_hint: 1, .7
            pos_hint: {'top': 1}
            on_slide_progress: root.sliding = True
            on_slide_complete: 
                root.sliding = False
                root.ids.count_info.text = str(self.index + 1) + '/' + str(len(self.slides))

        MDBoxLayout:
            orientation: 'vertical'
            padding: '5dp'

            MDRelativeLayout:

                MDIconButton:
                    id: favorite_button
                    pos_hint:{'top': 1, 'x': .85}
                    theme_icon_color: 'Custom'
                    icon_color: app.theme_cls.primary_color
                    icon_size: '18dp'
                    icon: 'star' if root.is_favorite else 'star-outline'
                
                MDLabel:
                    id: count_info
                    pos_hint: {'top': .4, 'x': .9}
                    theme_text_color: "Custom"
                    text_color: '#ffffff'
                    font_style: 'Caption'
                    bold: True
                    adaptive_size: True
                    # width: self.width - dp(10)
                    shorten: True
                    md_bg_color: .7, .7, .7, 1
                    padding: '1dp'

                MDLabel:
                    text: root.title
                    pos_hint: {'top': .27}
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_color
                    font_style: 'Caption'
                    bold: True
                    adaptive_height: True
                    shorten: True

                MDLabel:
                    text: root.place_info
                    pos_hint: {'top': .19}
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_color
                    font_style: 'Caption'
                    font_size: '10sp'
                    adaptive_height: True
                    shorten: True

                MDLabel:
                    text: root.date
                    pos_hint: {'top': .1}
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_color
                    font_style: 'Caption'
                    font_size: '10sp'
                    adaptive_height: True
                    shorten: True
