<GalleryLabel>:
    orientation: 'vertical'
    md_bg_color: '#ffffff'
    padding: '10dp'
    radius: 12

    MDRelativeLayout:
        MDCarousel:
            id: carousel
            size_hint: 1, .7
            pos_hint: {'top': 1}
            on_slide_complete:
                root.ids.count_info.text = str(self.index + 1) + '/' + str(root.real_count)

        MDLabel:
            id: count_info
            pos_hint: {'top': .4, 'x': .9}
            theme_text_color: "Custom"
            text_color: '#ffffff'
            font_style: 'Caption'
            bold: True
            adaptive_size: True
            shorten: True
            md_bg_color: .7, .7, .7, 1
            padding: dp(1)

        MDLabel:
            text: root.title
            pos_hint: {'top': .27}
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            font_style: 'Caption'
            bold: True
            adaptive_height: True
            shorten: True

        MDLabel:
            text: root.text
            pos_hint: {'top': .17}
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            font_style: 'Caption'
            adaptive_height: True
            shorten: True

        MDLabel:
            text: root.date
            pos_hint: {'top': .05}
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            font_style: 'Caption'
            font_size: '10sp'
            adaptive_height: True
            shorten: True
