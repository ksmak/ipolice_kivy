<MessageLabel>:
    orientation: 'vertical'
    padding: '10dp'
    radius: '5dp'
    md_bg_color: '#bee0f2' if root.is_own else '#bef2c6'
    

    MDRelativeLayout:

        MDLabel:
            pos_hint: {'top': 1, 'right': 1}
            text: 'Ваше сообщение:' if root.is_own else 'ID отправителя: ' + str(root.from_id)
            font_style: 'Caption'
            font_size: '9sp'
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_color
            adaptive_height: True

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 1, .7
            pos_hint: {'top': .9}
            padding: '5dp'
            
            MDLabel:
                text: root.text
                font_style: 'Caption'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
        
        MDLabel:
            pos_hint: {'top': .07}
            text: 'Добавлено: ' + root.date
            font_style: 'Caption'
            font_size: '9sp'
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_color
            adaptive_size: True
    
        MDIconButton:
            pos_hint: {'top': .2, 'center_x': .90}
            icon: 'check'
            icon_size: '16sp'
            theme_icon_color: 'Custom'
            icon_color: app.theme_cls.accent_color if root.is_send else 'black' 
        
        MDIconButton:
            pos_hint: {'top': .2, 'center_x': .95}
            icon: 'check'
            icon_size: '16sp'
            theme_icon_color: 'Custom'
            icon_color: app.theme_cls.accent_color if root.is_read else 'black' 
        
        MDIconButton:
            pos_hint: {'top': 1.1, 'center_x': .95}
            icon: 'delete-outline'
            icon_size: '24sp'
            theme_icon_color: 'Custom'
            icon_color: app.theme_cls.primary_color
            on_release: root.remove_message()
