<ListLabel>
    md_bg_color: '#ffffff'
    radius: 12
    spacing: dp(10)

    FitImage:
        source: root.image_path
        size_hint: .45, 1
        radius: (12, 0, 0, 12)
    
    MDRelativeLayout:

        MDLabel:
            pos_hint: {'top': .95}
            text: root.title
            font_style: 'Caption'
            bold: True
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            adaptive_height: True
            shorten: True

        MDLabel:
            pos_hint: {'top': .8}
            text: root.text
            font_style: 'Caption'
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            adaptive_height: True
            shorten: True
        
        MDLabel:
            pos_hint: {'top': .16}
            text: root.date
            font_style: 'Caption'
            font_size: '10sp'
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            adaptive_height: True
            shorten: True