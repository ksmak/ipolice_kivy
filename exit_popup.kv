<ExitPopup>
    background: ''
    anchor_x: 'center'
    anchor_y: 'top'

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 'white'

        MDLabel:
            valign: 'top'
            halign: 'center'
            text: 'Закрыть приложение?'
            font_style: 'H6'
           
        
        MDBoxLayout:
            pos_hint: {'right': 1, 'top': .1}
            spacing: '10dp'
            adaptive_width: True

            MDRectangleFlatButton:
                text: 'Отмена'
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                line_color: "white"
                font_style: 'Button'
                on_release: on_release: root.dismiss()

            MDRectangleFlatButton:
                text: 'Закрыть'
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                line_color: "white"
                font_style: 'Button'
                on_release: root.confirm()
