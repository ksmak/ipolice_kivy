<ErrorPopup>
    background: 'white'
    title_color: app.theme_cls.accent_color
    auto_dismiss: False

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 'white'

        MDBoxLayout:
            pos_hint: {'right': 1, 'top': .1}
            spacing: '10dp'
            adaptive_width: True

            MDRectangleFlatButton:
                text: 'Закрыть'
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                line_color: "white"
                font_style: 'Caption'
                on_release: root.confirm()
